{
  "name": "express-validate-system",
  "version": "1.0.0",
  "description": "A lightweight express middleware to easily validate user input in requests.",
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "build": "babel src -d lib",
    "coverage": "istanbul cover _mocha -- --compilers js:babel-register --recursive ./src/**/*.test.js",
    "test": "NODE_ENV=test mocha --compilers js:babel-register --reporter spec ./src/**/*.test.js",
	"test:watch": "npm run test -- --watch",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martijndeh/validate.git"
  },
  "author": "Martijn de Haan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/martijndeh/validate/issues"
  },
  "homepage": "https://github.com/martijndeh/validate#readme",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.6.5",
    "babel-plugin-syntax-object-rest-spread": "^6.5.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-function-bind": "^6.5.2",
    "babel-plugin-transform-object-rest-spread": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.7.2",
    "coveralls": "^2.11.9",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^2.4.5"
  },
  "keywords": [
    "valid",
    "validate",
    "validation",
    "express",
    "middleware",
    "input"
  ],
  "dependencies": {}
}
